{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automerge": false,
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "gomod",
        "dockerfile"
    ],
    "branchPrefix": "renovate-",
    "dependencyDashboard": false,
    "extends": [
        "config:recommended",
        "group:allNonMajor"
    ],
    "hashedBranchLength": 24,
    "labels": [
        "dependency-update"
    ],
    "major": {
        "automerge": false,
        "labels": [
            "dependency-update",
            "major-dependency-update"
        ]
    },
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "prHourlyLimit": 10,
    "rebaseWhen": "behind-base-branch",
    "registryAliases": {
        "mirror-docker.repository.collibra.io": "index.docker.io"
    },
    "reviewersSampleSize": 1,
    "schedule": [
        "at any time"
    ],
    "timezone": "Europe/Brussels",
    "updateNotScheduled": false
}